<?xml version="1.0" encoding="utf-8"?>
 <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:screenReaderFocusable="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:gravity="center_horizontal"
                android:scrollbars="horizontal|vertical">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"

                        android:background="@drawable/acces" />

                    <Button
                        android:id="@+id/button13"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"
                        android:background="@drawable/sterlin" />

                    <Button
                        android:id="@+id/button16"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"
                        android:background="@drawable/diamond" />

                    <Button
                        android:id="@+id/button8"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"
                        android:background="@drawable/gtb" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"
                        android:background="@drawable/key_bank" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"

                        android:background="@drawable/fcmb" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"

                        android:background="@drawable/hbb_bank" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"
                        android:background="@drawable/jaiz" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"

                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/button17"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"

                        android:background="@drawable/wema" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"

                        android:background="@drawable/eco" />

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"

                        android:autoText="true"
                        android:background="@drawable/uba" />

                    <Button
                        android:id="@+id/button14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"

                        android:background="@drawable/union" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"

                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/zent" />

                    <Button
                        android:id="@+id/button12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"
                        android:background="@drawable/first" />

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mtrl_bottomappbar_fab_cradle_rounded_corner_radius"

                        android:background="@drawable/fidelity" />
                </TableRow>

            </TableLayout></HorizontalScrollView>
        </ScrollView>
    <android.support.design.widget.NavigationView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>